extends layout

block content

  // =========================
  // HERO SECTION
  // =========================
  section.hero
    .hero-content
      img.hero-logo(src="/images/logo-cool.png", alt="Downtown Donuts Logo")
      h1 Downtown Donuts
      p Fresh, handmade donuts every morning since 1992.
      p.hero-cta Visit us downtown ‚Äî open daily at 6am üç©‚òï
      button.hero-btn(onclick="document.getElementById('menu').scrollIntoView({behavior: 'smooth'})") View Menu

  // =========================
  // ORDER LINKS
  // =========================
  section.order-links
    h2 Order Online
    .order-buttons
      a.order-btn(href="https://www.ubereats.com", target="_blank") UberEats
      a.order-btn(href="https://www.doordash.com", target="_blank") DoorDash
      a.order-btn(href="https://www.grubhub.com", target="_blank") Grubhub

  // =========================
  // MENU SECTION
  // =========================
  section#menu.menu-section
    h2 Our Donuts
    .menu-grid
      each donut in ["Chocolate Glaze", "Maple Bacon", "Salted Caramel", "Strawberry Frosted"]
        .menu-card
          img(src="/images/donut.png", alt="Donut")
          h3= donut
          p Lorem ipsum dolor sit amet, consectetur adipiscing elit.

  // =========================
  // ABOUT SECTION
  // =========================
  section.about-section
    h2 Our Story
    p Downtown Donuts has proudly served the downtown community since 1992.
    p This content is placeholder text and will be replaced by the client.

  // =========================
  // COMMENTS SECTION
  // =========================
  section.comments-section
    h2 Customer Comments

    form.comment-form(method="POST", action="/comments")
      input(type="text", name="comment", placeholder="Write a comment‚Ä¶" required)
      button(type="submit") Post Comment

    ul.comment-list
      if comments && comments.length
        each comment in comments
          li.comment-item= comment
      else
        li.comment-item No comments yet ‚Äî be the first!
