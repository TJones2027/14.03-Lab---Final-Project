extends layout

block content

  // Hero Section with centered logo
  section.hero
    .hero-content
      img.hero-logo(src="/images/logo-cool.png", alt="Downtown Donuts Logo")
      h1 Downtown Donuts
      p Fresh, handmade donuts every morning since 1992.
      button.hero-btn(onclick="scrollToMenu()") View Menu

        // ===========================
  // FOOD SERVICE LINKS SECTION
  // ===========================
  section.order-links
    h2 Order Online

    .order-buttons
      a.order-btn(href="https://www.ubereats.com", target="_blank") UberEats
      a.order-btn(href="https://www.doordash.com", target="_blank") DoorDash
      a.order-btn(href="https://www.grubhub.com", target="_blank") Grubhub

  // Menu Section
  section#menu.menu-section
    h2 Our Donuts
    .menu-grid
      each donut in ["Chocolate Glaze", "Maple Bacon", "Salted Caramel", "Strawberry Frosted"]
        .menu-card
          img(src="/images/donut.png", alt="Donut")
          h3= donut
          p Lorem ipsum dolor sit amet, consectetur adipiscing elit.

  // About Section
  section.about-section
    h2 Our Story
    p
      | Downtown Donuts has been serving the community since 1992.
      | All content is placeholder text and will be replaced by the client.

  // Comments Section
  section.comments-section
    h2 Leave a Comment
    form#commentForm
      input(type="text", id="commentInput", placeholder="Write a commentâ€¦" required)
      button(type="submit") Post Comment

    h3 Recent Comments
    ul#commentList
